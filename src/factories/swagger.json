    "definitions" : {
        "User": {
            "type": "object",
            "required": [ "email", "password" ],
            "properties": {
                "id": {
                    "type": "number"
                },
                "firstName":{
                    "type": "string"
                },
                "lastName": {
                    "type": "string"
                },
                "birthDate": {
                    "type": "string"
                },
                "mobile": {
                    "type": "string"
                },
                "email": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                },
                "profile": {
                    "type": "string",
                    "enum": ["available", "pending"]
                }
            }
        },
        "LoginForm": {
            "type": "object",
            "required": [ "email", "password" ],
            "properties": {
                "email": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                }
            }
        }
    },
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
