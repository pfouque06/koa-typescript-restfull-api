    "paths": {
        "": {
            "get":{
                "tags": ["users"],
                "summary": "Hello",
                "operationId": "Hello",
                "produces": [
                    "application/json",
                    "application/xml"
                ],
                "responses": {
                    "200": {
                        "description": "successful operation"
                    },
                    "404": {
                        "description": "Invalid username/password supplied"
                    }
                }
            }
        },
        "/users/register": {
            "post":{
                "tags": ["users"],
                "summary": "register a new user with its credentials (email, password)",
                "operationId": "register",
                "requestBody": {
                    "description": "user Credential: email, password",
                    "required": "true",
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/definitions/LoginForm"
                            }
                        }
                    }
                },
                "produces": [
                    "application/json",
                    "application/xml"
                ],
                "responses": {
                    "200": {
                        "description": "successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/definitions/User"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Invalid username/password supplied"
                    }
                }
            }
        },
        "/users/login": {
            "post":{
                "tags": ["users"],
                "summary": "login with user credentials: (email, password)",
                "operationId": "login",
                "requestBody": {
                    "description": "user Credential: email, password",
                    "required": "true",
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/definitions/LoginForm"
                            }
                        }
                    }
                },
                "produces": [
                    "application/json",
                    "application/xml"
                ],
                "responses": {
                    "200": {
                        "description": "successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/definitions/User"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Invalid username/password supplied"
                    }
                }
            }
        },
        "/users/logout": {
            "post":{
                "tags": ["users"],
                "summary": "logout current User",
                "operationId": "logout",
                "parameters": [
                    {
                        "in": "header",
                        "name": "Authorization",
                        "required": "true",
                        "description": "JWT token ",
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "produces": [
                    "application/json",
                    "application/xml"
                ],
                "responses": {
                    "200": {
                        "description": "successful operation"
                    },
                    "404": {
                        "description": "Invalid username/password supplied"
                    }
                }
            }
        },
        "/users/access/test": {
            "get":{
                "tags": ["users"],
                "summary": "test api access of current User",
